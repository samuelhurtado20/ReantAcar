@inherits LayoutComponentBase
<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <AuthorizeView>
                <Authorized>
                    <p class="my-3 me-3">Hello, @context.User.Identity?.Name!</p>
                    <button class="btn btn-outline-primary" @onclick="LogOut" >Log out   </button>
                </Authorized>
                <NotAuthorized>
                    <a class="btn btn-primary" href="Login">Login </a>
                    <a class="btn btn-success" href="Register">Register </a>
                </NotAuthorized>
            </AuthorizeView>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

@inject AuthenticationStateProvider provider
@inject NavigationManager navigation
@code {
    private void LogOut(MouseEventArgs e)
    {
        var authProvider = (CustomAuthStateProvider)provider;
        authProvider.Logout();
        navigation.NavigateTo("/");
    }
}